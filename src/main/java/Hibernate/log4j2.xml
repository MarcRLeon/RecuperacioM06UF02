<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  
  <Loggers>
     <!-- Nivells de log:
    OFF
    ALL
    FATAL
    ERROR
    WARN
    INFO
    DEBUG
    TRACE
       -->
    
    <!-- Per defecte --> 
    <Root level="INFO">
      <AppenderRef ref="Console" />     
    </Root>
    
    <!-- Hibernate -->
    <Logger name="org.hibernate" level="ERROR" additivity="false">
      <AppenderRef ref="Console" />
    </Logger>

    <!-- Sentencies SQL -->
    <Logger name="org.hibernate.SQL" level="ERROR" additivity="false">
      <AppenderRef ref="Console" />     
    </Logger>
 
  </Loggers>
  
  <Appenders>
    
    <!-- Sortida per pantalla -->
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss:nnn} [%t] %-5level %logger{36} - %msg%n" />
    </Console>
    
  </Appenders>
  
</Configuration>